<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Todo List APP test</title>
     
       <style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0d021f, #1a0134, #3a015c);
        color: #e5d6f0;
        margin: 0;
        padding: 0;
        transition: background 0.3s ease, color 0.3s ease;
        font-style: italic;
    }

    h1 {
        background: linear-gradient(to right, #da22ff, #9733ee);
        color: white;
        margin: 0;
        padding: 20px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(154, 89, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.4s ease;
    }

    ul {
        list-style: none;
        padding: 20px;
    }

    ul li {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 15px;
        padding: 15px 20px;
        position: relative;
        border-radius: 8px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    ul li:hover {
        transform: translateY(-5px);
        box-shadow: 0 14px 28px rgba(0, 0, 0, 0.7);
    }

    ul li a {
        color: #ffc8ff;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease;
        font-style: italic;
    }

    ul li a:hover {
        color: #ff52d1;
    }

    .delete-btn {
        color: #ff4d6d;
        position: absolute;
        right: 10px;
        top: 10px;
        transition: color 0.3s ease;
    }

    .edit-btn {
        color: #ffcc00;
        position: absolute;
        right: 40px;
        top: 10px;
        transition: color 0.3s ease;
    }

    form {
        background: rgba(255, 255, 255, 0.05);
        padding: 20px;
        margin: 20px;
        border-radius: 10px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.6);
        transition: all 0.3s ease;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
        color: #d4c6f2;
        font-style: italic;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #633a82;
        border-radius: 6px;
        background-color: #1a0134;
        color: #fff;
        transition: border-color 0.3s ease;
        font-style: italic;
    }

    input[type="text"]:focus {
        border-color: #ff00d4;
        outline: none;
    }

    input[type="submit"] {
        background: linear-gradient(to right, #ff00d4, #8a2be2);
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 6px;
        font-weight: bold;
        transition: background 0.3s ease, transform 0.3s ease;
        font-style: italic;
    }

    input[type="submit"]:hover {
        background: linear-gradient(to right, #8a2be2, #ff00d4);
        transform: scale(1.05);
    }
</style>


    </head>

    <body>
        <h1>SRISHTI TO-DO LIST</h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>" class="delete-btn">✘</a>
                <a href="/todo/<%= index %>" class="edit-btn">✎</a>
                <%- todo %>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">What should I do?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" value="Add" />
            </p>
        </form>
    </body>
</html>
